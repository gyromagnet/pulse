{
  "name": "parser_demo",
  "version": "1.0.0",
  "description": "Web-based tool that uses Pyodide and Lark to parse Bruker pulse code and visualize parse trees.",
  "type": "module",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git@github.com-gyromagnet:gyromagnet/pulse.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "check-build": "vite build --outDir .vite-test && rm -rf .vite-test",
    "serve": "vite preview",
    "lint": "eslint . --ext .js,.mjs,.cjs,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.mjs,.cjs,.ts,.tsx --fix",
    "stylelint": "stylelint \"**/*.{css,scss,html,tsx}\"",
    "stylelint:fix": "stylelint \"**/*.{css,scss,html,tsx}\" --fix",
    "format": "prettier --write .",
    "lint:all": "npm run lint:fix && npm run stylelint:fix && npm run format"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@eslint/json": "^0.11.0",
    "@eslint/markdown": "^6.3.0",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^16.0.0",
    "postcss-html": "^1.8.0",
    "stylelint": "^16.18.0",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "vite": "^6.3.0"
  },
  "dependencies": {
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.36.5",
    "codemirror": "^6.0.1"
  }
}
